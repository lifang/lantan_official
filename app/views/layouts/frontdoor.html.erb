<!doctype html>
<html>
  <head>
    <meta charset="utf-8"/>
    <title>澜泰门店</title>
    <%= stylesheet_link_tag "style" %>
    <%= javascript_include_tag "application","address","main","jquery.jqzoom.min","jquery-ui-1.10.0.custom.min","logoff" %>
    <script type="text/javascript" src="http://api.map.baidu.com/api?key=&v=1.4&services=true"></script>
    <script type="text/javascript" src="http://api.map.baidu.com/getscript?v=1.4&key=&services=&t=20130128031352"></script>
    <!--[if IE 6]>
    <script src="/assets/DD_belatedPNG_0.0.8a-min.js"></script>
    <script>
      DD_belatedPNG.fix('*');
    </script>
    <![endif]-->
  </head>
  <body>
    <div class="head">
      <div class="box">
        <div class="logo"><img src="/assets/logo.jpg"/></div>
        <div class="login">
          <div class="login">
            <a href="/">官网首页</a> |
            <a href="/contact_us">联系我们</a> |
             <% if session[:customer_id].nil? %>
                   <a href="/regist">注册</a> |
                   <a href="/login">登录</a>
                 <% else %>
                   你好，<%= current_customer.name %> |<a href="/user_infos/svcard_records">个人信息</a>|
                   <a href="/logout">注销</a>
                 <% end %>
          </div>
        </div>
        <div class="nav">
          <ul>
            <li><a href="/stores/<%= @store.id %>" <% if controller.controller_name == "stores" %>class="hover"<% end %>>首&nbsp;页</a></li>
            <li><a href="/stores/<%= @store.id %>/products" <% if controller.controller_name == "products" %>class="hover"<% end %>>产品&amp;服务</a></li>
            <li><a href="/stores/<%= @store.id %>/sales" <% if controller.controller_name == "sales" %>class="hover"<% end %>>促销活动</a></li>
            <li><a href="/stores/<%= @store.id %>/reservations/new" <% if controller.controller_name == "reservations" %>class="hover"<% end %>>在线预约</a></li>
          </ul>
        </div>
      </div>
    </div>
        <%= yield %>
    <div class="foot">
      <p>◎ 2013 LanTan. All Rights Reserved.</p>
    </div>
  </body>
</html>