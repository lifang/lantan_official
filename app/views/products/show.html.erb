<%= stylesheet_link_tag "jqzoom" %>
<%= javascript_include_tag "main" %>
<%= javascript_include_tag "jquery.jqzoom.min" %>
<div class="main">
  <div class="box">
    <div class="leftAera">
      <%= render "/stores/store_info" %>
      <div class="leftSales">
        <%= render("/sales/laster_sales") %>
      </div>
    </div>
    <div class="rightAera">
      <div class="rightTitle">
        <% if @product.is_service %>
          <h1><a href="/stores/<%= @store.id %>/products">服务</a> &gt;<%= @product.name %></h1>
        <% else %>
          <h1><a href="/stores/<%= @store.id %>/products">产品</a> &gt;<%= @product.name %></h1>
        <% end %>
        <div class="pro_show">
          <div class="bigImg jqzoom">
            <img src="<%=Constant::BACK_SERVER_PATH + @product.img_url.gsub("img#{@product.id}", "img#{@product.id}_#{Constant::PIC_SIZE[3]}") if @product.img_url %>"
                 jqimg = "<%= @product.img_url %>" />
          </div>
          <div class="pic_show">
            <ul>
              <li><img src="<%=Constant::BACK_SERVER_PATH + @product.img_url.gsub("img#{@product.id}", "img#{@product.id}_#{Constant::PIC_SIZE[0]}") if @product.img_url %>" alt="lantan" /></li>
              <% @image_urls.each do |img| %>
                <li><img src="<%=Constant::BACK_SERVER_PATH + img.img_url.gsub("img#{@product.id}", "img#{@product.id}_#{Constant::PIC_SIZE[0]}") %>" alt="lantan" /></li>
              <% end unless @image_urls.blank? %>
            </ul>
          </div>
        </div>
        <div class="pro_price">
          <h2><%= @product.name  %></h2>
          <p>价格：<span><%= @product.base_price %></span>元</p>
          <p>促销价：<span><%= @product.sale_price %></span>元</p>
        </div>
        <div class="clear"></div>
        <div class="pro_text">
          <p><%= @product.introduction.html_safe if @product.introduction %></p>
        </div>
      </div>
    </div>
  </div>
</div>