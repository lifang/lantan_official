<div class="main">
  <div class="box">
    <div class="leftAera">
      <%=render "stores/store_info" %>
      <div class="leftSales">
        <%=render("/sales/laster_sales")%>
      </div>
    </div>
    <div class="rightAera">
      <div class="rightTitle">
        <h1>促销活动</h1>
        <%= render("sales_list") %>
      </div>
      <div class="pageTurn">
        <% if !@sales.blank? %>
        <%= will_paginate  @sales, :previous_label => "上一页",:next_label=> "下一页", :class => "pageTurn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>