<%= render("/user_infos/search")  %>
<table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table">
  <thead>
    <tr class="hbg">
      <td>订单号</td>
      <td>时间</td>
      <td>消费项目</td>
      <td>金额（元）</td>
      <td>支付方式</td>
      <td>消费门店</td>
      <td>开据发票</td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <%(@orders || []).each do |order|%>
        <td><%= order.code %> </td>
        <td><%= order.created_at.strftime('%Y-%m-%d') if order.created_at %></td>
        <td>
          <table width="100%" border="0" cellspacing="1" cellpadding="0" class="s_table">
            <tr class="fws">
              <td>名称</td>
              <td>数量</td>
              <td>单价（元）</td>
            </tr>
            <% (OrderProdRelation.joins(:product).includes(:product).where(:order_id => order.id) || []).each do |relation|  %>
              <tr>
                <td><%= relation.product.name %></td>
                <td><%= relation.pro_num %></td>
                <td><%= relation.price %></td>
              </tr>
            <%end%>
          </table>
        </td>
        <td><%=  order.price%></td>
        <td>
          <% pay_types = [] %>
          <% order.order_pay_types.map(&:pay_type).each do |pay_type| %>
            <%  pay_types << OrderPayType::PAY_TYPES_NAME[pay_type]   %>
          <% end %>
           <%= pay_types.join(",") %>
        </td>
        <td><%= order.s_store.name%> </td>
        <td><%= order.billing_status %></td>
      </tr>
    <%end%>
  </tbody>
</table>

<div class="pageTurn">
  <% if !@orders.blank? %>
  <%= will_paginate  @orders, :class => "pagination", :previous_label => "&lt;上一页",
    :next_label=> "下一页&gt;"%>
  <% end %>
</div>

<%= javascript_include_tag "application","user_info_main" %>
