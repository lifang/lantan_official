<%= render("/user_infos/search")  %>
<table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table">
  <thead>
    <tr class="hbg">
      <td>订单号</td>
      <td>时间</td>
      <td>消费项目</td>
      <td>金额（元）</td>
      <td>支付方式</td>
      <td>消费门店</td>
      <td>开据发票</td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <%(@orders || []).each do |order|%>
        <td><%= order.code %> </td>
        <td><%= order.created_at.strftime('%Y-%m-%d') if order.created_at %></td>
        <td>
          <table width="100%" border="0" cellspacing="1" cellpadding="0" class="s_table">
            <tr class="fws">
              <td>名称</td>
              <td>数量</td>
              <td>单价（元）</td>
            </tr>
            <% (order.order_prod_relations || []).each do |relation|  %>
              <tr>
                <td><%= relation.product_id %></td>
                <td><%= relation.pro_num %></td>
                <td><%= relation.product_id %></td>
              </tr>
            <%end%>
          </table>
        </td>
        <td><%=  order.price%></td>
        <td>
          <% if  OrderPayType.find(order.types).pay_type == 1%>
            <%=  OrderPayType::TYPES[:one]%>
          <%elsif OrderPayType.find(order.types).pay_type == 2%>
            <%=  OrderPayType::TYPES[:two]%>
          <%end%>
        </td>
        <td><%= Store.find(order.store_id).name%> </td>
        <td><%= order.is_billing %></td>
      </tr>
    <%end%>
  </tbody>
</table>
<div class="pageTurn">
  <%= will_paginate  @orders, :class => "pagination", :previous_label => "&lt;上一页",
    :next_label=> "下一页&gt;"%>
</div>
<%= javascript_include_tag "application","user_info_main" %>
