<div class="main m_bg">
  <div class="box">
    <div class="banner">
      <%=render("add_pic_change") %>
    </div>
    <div class="left">
      <%=render "store_info" %>
    </div>
    <div class="right">
      <div class="sales">
        <%=render("/sales/laster_sales")%>
      </div>
      <div class="text">
        <h1>服务</h1>
        <dl>
          <% Product::SERVICE_TYPES.each do |product_type|%><!---->
            <dt><%= product_type[1] %></dt><!---->
            <% (@services || []).each do |service| %>
             <% if service.types == product_type[0]  %>
                <span><%=link_to "#{service.name}","/products/#{service.id}" %>&nbsp;/&nbsp;</span>
                <% end %>
            <%end%>
          <%end%>
        </dl>
      </div>
      <div class="text">
        <h1>产品</h1>
        <dl>
           <% Product::PRODUCT_TYPES.each do |product_type|   %>
            <dt><%= product_type[1] %></dt>

            <% ( @products || []).each do |product| %>
              <% if product.types == product_type[0]  %>
            <span><%=link_to "#{product.name}","/products/#{product.id}" %>&nbsp;/&nbsp;</span>
              <%end%>
            <%end%>
          <%end%>       
        </dl>
      </div>
    </div>
  </div>
</div>


